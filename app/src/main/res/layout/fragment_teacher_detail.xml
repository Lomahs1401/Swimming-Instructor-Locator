<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.teacher.detail.TeacherDetailFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <LinearLayout
                android:background="@drawable/round_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:backgroundTint="#E3EBF6"
                android:clipChildren="false"
                android:clipToOutline="true"
                android:clipToPadding="false"
                android:elevation="4dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:outlineProvider="background"
                android:padding="16dp"
                android:translationZ="4dp">

                <ImageView
                    android:background="@drawable/rounded_corners"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:contentDescription="Teacher Avatar" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="teacher name"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    android:textColor="#020203"
                    android:paddingStart="8dp" />
            </LinearLayout>

            <LinearLayout
                android:background="@drawable/round_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:backgroundTint="#E3EBF6"
                android:clipChildren="false"
                android:clipToOutline="true"
                android:clipToPadding="false"
                android:elevation="4dp"
                android:orientation="vertical"
                android:outlineProvider="background"
                android:padding="16dp"
                android:translationZ="4dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="8dp"
                    android:text="Profile"
                    android:textSize="16sp"
                    android:textColor="#3583D8"
                    android:textStyle="italic"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="8dp"
                        android:text="Gender: "
                        android:textSize="16sp"
                        android:textColor="#9B9CA1"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="8dp"
                        android:text="Male"
                        android:textSize="16sp"
                        android:textColor="#020203" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="8dp"
                        android:text="Age: "
                        android:textSize="16sp"
                        android:textColor="#9B9CA1"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="8dp"
                        android:text="21"
                        android:textSize="16sp"
                        android:textColor="#020203"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="8dp"
                        android:text="Height: "
                        android:textSize="16sp"
                        android:textColor="#9B9CA1"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="8dp"
                        android:text="175 cm"
                        android:textSize="16sp"
                        android:textColor="#020203"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="8dp"
                        android:text="Weight: "
                        android:textSize="16sp"
                        android:textColor="#9B9CA1"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="8dp"
                        android:text="70 kg"
                        android:textSize="16sp"
                        android:textColor="#020203"/>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:background="@drawable/round_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:backgroundTint="#E3EBF6"
                android:clipChildren="false"
                android:clipToOutline="true"
                android:clipToPadding="false"
                android:elevation="4dp"
                android:orientation="vertical"
                android:outlineProvider="background"
                android:padding="16dp"
                android:translationZ="4dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="8dp"
                    android:text="Background Information"
                    android:textSize="16sp"
                    android:textColor="#3583D8"
                    android:textStyle="italic"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="8dp"
                        android:text="Since: "
                        android:textSize="16sp"
                        android:textColor="#9B9CA1"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="8dp"
                        android:text="Feb 2022"
                        android:textSize="16sp"
                        android:textColor="#020203" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="8dp"
                        android:text="Occupation: "
                        android:textSize="16sp"
                        android:textColor="#9B9CA1"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="8dp"
                        android:text="Teacher"
                        android:textSize="16sp"
                        android:textColor="#020203"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:background="@drawable/round_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:backgroundTint="#E3EBF6"
                android:clipChildren="false"
                android:clipToOutline="true"
                android:clipToPadding="false"
                android:elevation="4dp"
                android:orientation="vertical"
                android:outlineProvider="background"
                android:padding="16dp"
                android:translationZ="4dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="8dp"
                    android:text="Contact"
                    android:textSize="16sp"
                    android:textColor="#3583D8"
                    android:textStyle="italic"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="8dp"
                        android:text="Phone: "
                        android:textSize="16sp"
                        android:textColor="#9B9CA1"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="8dp"
                        android:text="0909222555"
                        android:textSize="16sp"
                        android:textColor="#020203" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="8dp"
                        android:text="Mail: "
                        android:textSize="16sp"
                        android:textColor="#9B9CA1"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="8dp"
                        android:text="teacher@gmail.com"
                        android:textSize="16sp"
                        android:textColor="#020203" />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</FrameLayout>
